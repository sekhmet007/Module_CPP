CC=g++

# Options de compilation
CFLAGS=-Wall -Wextra -Werror -std=c++98

# Nom du fichier exÃ©cutable
EXEC=megaphone

# Source files
SRC=megaphone.cpp

# Object files
OBJ=$(SRC:.cpp=.o)

all: $(EXEC)

$(EXEC): $(OBJ)
	$(CC) $(OBJ) -o $(EXEC)

%.o: %.cpp
	$(CC) -c $(CFLAGS) $< -o $@

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(EXEC) $(OBJ)

re: fclean all